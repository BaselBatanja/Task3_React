@keyframes transitionBox {
    0%{
        opacity 0
    }
    100% {
        opacity 1
    }
}
.eventItem
    cursor pointer
    display flex
    justify-content center
    align-items center
    border 1px solid #ccc
    color white
    border-radius 12px
    flex-direction column
    font-family sans-serif
    transition transitionBox 0.5s ease
    .nameDiv
        width 100%
        height: 50%
        text-align center
        max-width 80%
        overflow hidden
        white-space nowrap;
        text-overflow ellipsis;
        h1
            text-overflow ellipsis;
            overflow hidden
            white-space nowrap;

    .dateDiv
        width 100%
        text-align center
        font-size 20px
        height 50%
        padding-top 20px
        display flex
        justify-content space-between
        flex-direction column
