.form
    display flex
    justify-content center
    align-items center
    height 100%
    flex-direction column
    padding 0
    margin 0
    gap 2.5rem
    .innerDiv
        width 35rem
        overflow hidden
        display flex
        justify-content space-between
        align-items center
        label
            font-size 20px
            font-family sans-serif
        textarea
            width 23.5rem
            min-width 23rem
            max-width 23rem
            height 10rem
            max-height 17rem
            min-height 10rem
            padding 1rem
            font-size 20px
            border 1px solid black

        input
            width 24.9rem
            height 2rem
            text-align center
            font-size 20px
            border 1px solid black
    .textAreaDiv label
        align-self flex-start

.invalidInput
    background-color rgba(red,0.4)

.invalidLabel
    color red