.header
    background-color #1c313a
    display flex
    justify-content space-between
    padding 0 3rem
    height 5.5rem
    align-items center
    color white


    .logo
        font-size 2rem
        font-family sans-serif

    .actions
        .button
            background-color transparent
            color white
            font-size 1.2rem
            border 2px solid white
            border-radius 10px
            padding 0.5rem 1.5rem
            &:hover
                background-color white
                color black
                cursor pointer

        